{
  "compilerOptions": {

    /* Language and Environment */
    "target": "ES2020",
    "moduleResolution": "NodeNext",

    /* Modules */
    "allowImportingTsExtensions": true,

    /* JavaScript Support */
    "allowJs": true,
    
    /* Emit */
    "noEmit": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}